datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Empresa {
  id          Int       @id @default(autoincrement())
  razaoSocial String
  cnpj        String
  cep         String
  cidade      String
  estado      String
  bairro      String
  complemento String?
  licencas    Licenca[] // Adiciona o campo de relação oposto
}


model Licenca {
  id             Int      @id @default(autoincrement())
  numero         String
  orgaoAmbiental String
  emissao        DateTime
  validade       DateTime
  empresaId      Int
  empresa        Empresa  @relation(fields: [empresaId], references: [id])
}